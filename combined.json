{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 280,

    "padding": {"left": 111, "right": 10, "top": 5},
    "data": {
      "name": "nutrition"
    },
    "mark": {
      "type": "bar",
      "tooltip": true,
      "color": "#FFCC00",
      "stroke": "#C8102E",
      "strokeWidth": 1,
      "size": 35
    },
    "encoding": {
      "x": {
        "field": "value",
        "type": "quantitative",
        "title": "Amount (g)",
        "axis": {
          "labelColor": "#C8102E",
          "titleColor": "#C8102E",
          "titleFontSize": 14,
          "labelFontSize": 13,
          "tickCount": 10
        }
      },
      "y": {
        "field": "nutrient",
        "type": "nominal",
        "title": null,
        "axis": {
          "labelColor": "#C8102E",
          "labelFontSize": 13,
          "tickCount": 10
        }
      },
      "tooltip": [
        {"field": "nutrient", "type": "nominal"},
        {"field": "value", "type": "quantitative", "format": ".1f"}
      ]
    }
  }