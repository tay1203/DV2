{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 280,
  "data": {
    "url": "https://raw.githubusercontent.com/tay1203/DV2/refs/heads/main/nutrition.csv"
  },
  "params": [
    {
      "name": "Food",
      "value": "None"
    }
  ],
  "transform": [
        { "filter": "datum.Food == Food" },
        {
          "fold": [
            "Salt (g)",
            "Sugar (g)",
            "Fat (g)",
            "Protein (g)",
            "Carbohydrate (g)"
          ],
          "as": ["Nutrient", "Value"]
        }
      ],
      "mark": {
        "type": "bar",
        "tooltip": true,
        "color": "#FFCC00",
        "stroke": "#C8102E",
        "strokeWidth": 1,
        "size": 35
      },
      "encoding": {
        "x": {
          "field": "Value",
          "type": "quantitative",
          "title": "Amount (g)",
          "axis": {
            "labelColor": "#C8102E",
            "titleColor": "#C8102E",
            "tickCount": 10
          }
        },
        "y": {
          "field": "Nutrient",
          "type": "nominal",
          "title": null,
          "axis": {
            "labelColor": "#C8102E",
            "labelFontSize": 13,
            "tickCount": 10
          }
        },
        "tooltip": [
          { "field": "Nutrient", "type": "nominal" },
          { "field": "Value", "type": "quantitative", "format": ".1f" }
        ]
      }
    } 

  


      
    
  

