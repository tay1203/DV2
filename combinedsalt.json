{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 200,
    "height": 200,
    "data": {
      "name": "nutrition"
    },
    "transform": [
      {
        "calculate": "max(0, 5 - datum.value)",
        "as": "Remaining Salt"
      },
      {
        "calculate": "datum.value / 5 * 100",
        "as": "Percentage"
      },
      {
        "fold": ["value", "Remaining Salt"],
        "as": ["Category", "Amount"]
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "arc",
          "innerRadius": 70,
          "tooltip": true
        },
        "encoding": {
          "theta": {
            "field": "Amount",
            "type": "quantitative",
            "sort": "descending"
          },
          "color": {
            "field": "Category",
            "type": "nominal",
            "scale": {
              "domain": ["value", "Remaining Salt"],
              "range": ["#C8102E", "#FFCC00"]
            },
            "legend": null
          },
          "order": { "field": "Category", "sort": "ascending" },
          "tooltip": [
            { "field": "Category", "type": "nominal" },
            { "field": "Amount", "type": "quantitative", "format": ".2f" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 30,
          "font": "Arial"
        },
        "encoding": {
          "text": {
            "field": "Percentage",
            "type": "quantitative",
            "format": ".0f"
          },
          "y": { "value": 80 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "of Daily" },
          "y": { "value": 100 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "Recommended" },
          "y": { "value": 115 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial"
        },
        "encoding": {
          "text": { "value": "Salt" },
          "y": { "value": 130 }
        }
      }
    ]
  }