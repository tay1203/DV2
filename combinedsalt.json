{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 160,
    "height": 190,
    "padding": {"top": 20},
    "config": {
        "view": {"stroke": "transparent"}
    },
    "data": {
      "name": "nutrition"
    },
    "transform": [
        {
        "calculate": "datum.value",
        "as": "Contained Salt"
        },
      {
        "calculate": "max(0, 5 - datum.value)",
        "as": "Remaining Salt"
      },
      {
        "calculate": "datum.value / 5 * 100",
        "as": "Percentage"
      },
      {
        "fold": ["Contained Salt", "Remaining Salt"],
        "as": ["Category", "Amount"]
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "arc",
          "innerRadius": 60,
          "tooltip": true
        },
        "encoding": {
          "theta": {
            "field": "Amount",
            "type": "quantitative",
            "sort": "descending"
          },
          "color": {
            "field": "Category",
            "type": "nominal",
            "scale": {
              "domain": ["Contained Salt", "Remaining Salt"],
              "range": ["#C8102E", "#b5b5b5"]
            },
            "legend": null
          },
          "order": { "field": "Category", "sort": "ascending" },
          "tooltip": [
            { "field": "Category", "type": "nominal" },
            { "field": "Amount", "type": "quantitative", "format": ".2f" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 40,
          "font": "Arial",
          "dx": -10
        },
        "encoding": {
          "text": {
            "field": "Percentage",
            "type": "quantitative",
            "format": ".0f",
            "formatType": "number"
          },
          "y": { "value": 80 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 35,
          "font": "Arial",
          "dx": 28
        },
        "encoding": {
          "text": { "value": "%" },
          "y": { "value": 80 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial",
          "dy": 8
        },
        "encoding": {
          "text": { "value": "of Daily" },
          "y": { "value": 100 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial",
          "dy": 6.5
        },
        "encoding": {
          "text": { "value": "Recommended" },
          "y": { "value": 115 }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 12,
          "font": "Arial",
          "dy": 5
        },
        "encoding": {
          "text": { "value": "Salt" },
          "y": { "value": 130 }
        }
      }
    ]
  }